@model IEnumerable<Seer.Infrastructure.Models.Upload>

<div class="pull-right">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
        Upload New Document
    </button>
</div>
<h2><i class="fa fa-folder-o" aria-hidden="true"></i> Uploads</h2>
<br />

@if (!Model.Any())
{
    <p>No uploads found - would you like to upload something?</p>
}
else
{
    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Uploaded By
        </th>
        <th class="text-right">
            @Html.DisplayNameFor(model => model.Created)
        </th>
    </tr>

    @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Download", new {id = item.Id})">
                        <i class="fa fa-file-o" aria-hidden="true"></i> &nbsp;
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
            </tr>
        }
    </table>
}

<form action="" method="post" enctype="multipart/form-data">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Choose a document for upload...</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    <label for="file">Filename:</label>
                    <input type="file" name="file" id="file" />


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </div>
        </div>
    </div>
</form>