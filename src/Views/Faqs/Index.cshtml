@model IEnumerable<Seer.Infrastructure.Models.Faq>

<h2>Frequenty Asked Questions</h2>
<hr />
<br />

@if (Model.Any())
{
    foreach (var item in Model)
    {


        <div style="margin-bottom: 20px;">
    <div class="card">
        <div class="card-header">
            <div class="pull-right text-sm-right">@Html.DisplayFor(modelItem => item.Created)</div>
            <h4>@Html.DisplayFor(modelItem => item.Question)</h4>
        </div>
        <div class="card-text" style="padding: 20px 0 20px 20px;">
            @Html.Raw(item.Answer)
        </div>
    </div>
</div>

    }
}
else
{
    <div>No FAQs found</div>
}
