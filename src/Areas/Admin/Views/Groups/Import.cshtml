@{
    ViewBag.Title = "Import";
}

<h2>Import Groups</h2>
<br />
<hr />
@using (Html.BeginForm("Import", "Groups", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-@ViewBag.MessageType">
                @ViewBag.Message
            </div>
            <br />
        }

        <div class="pull-right">
            <a href="~/content/templates/groups.csv" target="_blank">Please use this template file format</a>
        </div>
        <label class="btn btn-secondary">
            Select file for import <input name="file" type="file" hidden>
        </label>
        <br />
        <input type="submit" value="Upload" class="btn btn-primary" />

    </div>
}