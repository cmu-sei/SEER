@model Seer.Infrastructure.Models.Campaign

@{
    ViewBag.Title = "Delete";
}

<div class="pull-right">
    @Html.ActionLink("Back to List", "Index")
</div>

<h2>Delete Campaign</h2>
<h3>Are you sure you want to continue? Deleting a campaign accidentally can be hugely problematic!</h3>
<hr />
<br />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Model.Name
        </dt>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" onclick="return confirm('Are you really sure that you want to delete this campaign?')" />
        </div>
    }
</div>
