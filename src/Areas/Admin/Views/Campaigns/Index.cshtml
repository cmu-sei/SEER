@model IEnumerable<Seer.Infrastructure.Models.Campaign>

@{
    ViewBag.Title = "Campaigns";
}

<div class="pull-right">
    @Html.ActionLink("Create New Campaign", "Create", new { }, new { @class = "btn btn-primary" })
</div>
<h2><i class="fa fa-globe" aria-hidden="true"></i> Campaigns</h2>
<br />

@Html.ValidationSummary(true)

@if (!Model.Any())
{
    <p>No campaigns found - would you like to create one?</p>
}
else
{
    <table class="table">
    <tr>
        <th>
            Name
        </th>
        <th width="1%">
            &nbsp;
        </th>
    </tr>

    @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Edit", "Campaigns", new {id = item.Id})">
                        @Html.DisplayFor(model => item.Name)
                    </a>
                </td>
                <td>
                    <a href="/admin/campaigns/delete/@item.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        }

    </table>
}
