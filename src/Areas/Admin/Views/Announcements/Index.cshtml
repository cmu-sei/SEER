@model IEnumerable<Seer.Infrastructure.Models.Announcement>

<div class="pull-right">
    @Html.ActionLink("Create New Announcement", "Create", new { }, new { @class = "btn btn-primary" })
</div>
<h2><i class="fa fa-bullhorn" aria-hidden="true"></i> Announcements</h2>
<br />

@if (!Model.Any())
{
    <p>No Announcements found</p>
}
else
{

    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssessmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th class="text-right">
            @Html.DisplayNameFor(model => model.Created)
        </th>
    </tr>

    @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Edit", new {id = item.Id})">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssessmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
            </tr>
        }

    </table>
}