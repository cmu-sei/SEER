@using Seer.Infrastructure.Enums
@model Seer.Infrastructure.Models.Announcement

@{
    ViewBag.Title = "Create Announcement";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="pull-right">
    @Html.ActionLink("Back to List", "Index")
    <input type="submit" value="Create" class="btn btn-primary" />
</div>

    <h2>@ViewBag.Title</h2>
    <hr />

    <input type="hidden" name="AssessmentId" value="@ViewBag.AssessmentId" />
    <input type="hidden" name="Created" value="@DateTime.Now" />

    <div class="form-horizontal">
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new {@class = "control-label col-md-2"})
        <div>
            @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Detail, new {@class = "control-label col-md-2"})
        <div>
            @Html.EditorFor(model => model.Detail, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.Detail, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Status, new {@class = "control-label col-md-2"})
        <div>
            @Html.DropDownList("Status", Html.GetEnumSelectList<ActiveStatus>(), "Select Status", new {@class = "form-control"})
            @Html.ValidationMessageFor(model => model.Status, "", new {@class = "text-danger"})
        </div>
    </div>
</div>
}