@{
    ViewBag.Title = "Import";
}

<h2>Import an Inject to Catalog</h2>
<br />
<hr />
@using (Html.BeginForm("Import", "Catalog", FormMethod.Post, new { enctype = "multipart/form-data", multiple = "multiple" }))
{
    <div>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-@ViewBag.MessageType">
                @ViewBag.Message
                <div>@ViewBag.ImportSuccess processed successfully!</div>
            </div>
            if (ViewBag.ImportProblems != null && ViewBag.ImportProblems.Any())
            {
                <div class="alert alert-danger">
                    @foreach (var o in ViewBag.ImportProblems)
                    {
                        <div>@o</div>
                    }
                </div>
            }
            <br />
        }
        <div class="pull-right">
            <a href="~/content/templates/catalog_item.zip" target="_blank">Please use this template file format</a>
        </div>
        <label class="btn btn-secondary">
            Select file for import <input name="files" type="file" multiple hidden>
        </label>
    <p>
        <br/>
        <input type="submit" value="Upload" class="btn btn-primary"/>
    </p>
    </div>
}