@model IEnumerable<Seer.Infrastructure.Models.IntelItem>

@{
    ViewBag.Title = "Intel";
}

<div class="pull-right">
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Intel</a>
</div>

<h2>Intel</h2>
<br />

<table class="table">
    <tr>
        <th>Details</th>
        <th>Status</th>
        <th class="text-right">Created</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Edit", new {id=item.Id})">@Html.DisplayFor(modelItem => item.Subject)</a>
            </td>
            <td>
                @item.Status
            </td>
            <td class="text-right">
                @item.Created.ToShortDateString()
            </td>
        </tr>
    }
</table>
